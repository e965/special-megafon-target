&__final
  &-result, &-megafon
    width 100%; max-width 700px

    background-color #fff
    box-shadow 0px -1px 34px rgba(#000, .1)

  &-result
    display grid

    padding 0 40px

    grid-template resultGrid(140px, 50px, 80px, 250px)

  &--score
    grid-area score

    padding 40px 5px 0

    font-size 1.2em
    font-weight 500
    color #00B956

  &--share
    padding-left 1px // ¯\_(ツ)_/¯
    grid-area share

  &--restart-btn
    grid-area btn

    button
      background-color transparent
      border 0

      margin-top 10px
      padding 0

      outline 0

      cursor pointer
      user-select none

      transition var(--mgfn__standard-transilion)

      &::after
        content ''

        display inline-block
        width 1em; height 1em
        margin-left 5px

        vertical-align middle

        background-image var(--mgfn__svg-refresh)
        background-size contain
        background-repeat no-repeat

      &:hover
        opacity .6

        @media $mq.notHover
          opacity 1

  &--sms
    grid-area sms

    display flex
    justify-content center
    align-items center

    padding 10px

    & ^[0]-im__msg
      margin 0

      background-color #00B956
      padding 10px 20px

      &::after
        border-bottom 10px solid #00B956 !important

      &-author, &-text
        color #fff

      &-author
        font-weight 700

      &-text
        line-height 1.5

        b
          font-weight 700

  &--face
    grid-area face

    display flex
    justify-content center
    align-items center

    padding 10px

    img
      width 120px
      object-fit contain

  &-megafon
    margin-top 20px
    padding 30px 40px

    &--logo, &--link
      border 0 !important
      text-decoration none !important

    &--logo
      display block

      img
        height 40px

    &--text
      margin-top 25px

      div
        &:not(:first-child)
          margin-top 15px

    &--link
      display block

      width min-content

      margin-top 30px
      padding 10px 40px

      background-color #731982
      border-radius 5px

      user-select none

      color #fff !important

      transition var(--mgfn__standard-transilion)

      &:hover
        background-color lighten(@background-color, 10)
