&-im

  &__header
    height 56px
    color var(--mgfn__header-text-color)
    background-color var(--mgfn__header-bg-color)
    user-select none
    cursor default
    transition var(--mgfn__switch-theme-transilion)

  &__counter
    position: absolute
    top: 0
    left: 26px
    font-size: 9px

  &__operator
    position: absolute
    top: 0
    right: 16px
    font-size: 9px

  &__sender
    position: relative
    padding-top: 26px

  &__sender-name
    font-size: 15px
    text-align: center

  &__sender-avatar
    position: absolute
    bottom: 2px
    right: 10px
    width 20px
    height 20px
    background-image var(--mgfn__img-anon)
    background-size cover

  &__messages
    height: 230px
    background-color var(--mgtn__chat-bg-color)
    background-image var(--mgfn__img-chat-bg)
    background-size cover
    overflow hidden
    overflow-y scroll
    transition var(--mgfn__switch-theme-transilion)

    @media (min-width: 568px)
      height: 290px

    &-wrapper
      display: flex
      align-items: flex-end
      min-height: 100%

    &-inner
      overflow: hidden
      transform: translate3d(0, 100%, 0)

    &-list
      display: flex
      flex-direction: column
      justify-content: flex-end
      align-items: flex-start
      padding: 20px 10px 0 13px

  &__msg
    position: relative
    margin-bottom: 25px

    &[data-typing]
      color: gray

      & > span
        display: inline-block
        animation: mgfn__typing 1.3s linear infinite

        &:nth-child(2)
          animation-delay: -1.1s

        &:nth-child(3)
          animation-delay: -.9s

    &[data-sender='from']
      margin-right: auto

    &[data-sender='to']
      margin-left: auto

    &--text
      padding 10px 15px
      font-size: 14px
      line-height 1.3
      background-color #fff
      box-shadow 0 0 12px rgba(#000, .15)

      &[data-sender='from']
        border-radius 10px 10px 10px 0

        &::after
          content ''
          position absolute
          width 0
          height 0
          bottom 0
          left -6px
          border-bottom 6px solid #fff
          border-left 6px solid transparent

      &[data-sender="to"]
        border-radius 10px 10px 0 10px
        background-color var(--mgtn__user-sms-bg-color)

        &::after
          content ''
          position absolute
          width 0
          height 0
          bottom 0
          right -6px
          border-bottom 6px solid var(--mgtn__user-sms-bg-color)
          border-right 6px solid transparent

    &--face

      & > img
        display: block
        max-width: none !important
        height: 175px

      &[data-correct]

        &::after
          content: ''
          position absolute
          width 28px
          height 28px
          bottom 0
          right 0
          background-repeat no-repeat
          background-size cover

      &[data-correct="true"]::after
        background-image var(--mgfn__svg-mark_success)

      &[data-correct="false"]::after
        background-image var(--mgfn__svg-mark_failure)

  &__msg-author
    margin-bottom 3px
    color var(--mgtn__chat-text-color)
    white-space nowrap
    transition var(--mgfn__switch-theme-transilion)
    webkit-anim-delay()

    &:empty
      display none
