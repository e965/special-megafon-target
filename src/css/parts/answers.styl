&__answers
  position relative
  width 100%; min-height var(--mgfn__answers-height)
  max-width 900px;

  display grid

  grid-template-columns 1fr
  grid-template-rows 40px 1fr

  border-radius 30px 30px 0 0

  background-color #fff
  box-shadow 0px -1px 34px rgba(#000, .1)

  z-index 102

  &--header, &--main
    position relative
    width 100%

  &--phrase, &--theme-switcher
    position absolute
    padding 15px 15px 0

  &--phrase
    left 5px
    cursor default

    color #5d5d5d

    grid-area phrase

  &--theme-switcher
    display block
    right 5px

    cursor pointer

    color #A6A6A6

    -webkit-tap-highlight-color transparent

    grid-area ts

    span
      position relative

      display inline-block
      width 46px; height 26px

      margin-left 10px

      background-color #E0E0E0
      border-radius 23px

      vertical-align middle

      will-change transform

      &::before, &::after
        content ''

        position absolute
        left 0

        border-radius 11px

        will-change transform

      &::before
        width 42px; height 22px
        background-color var(--mgfn__header-bg-color)
        border-radius 11px
        transform translate3d(2px, 2px, 0) scale3d(1, 1, 1)
        transition all .25s linear

      &::after
        width 22px; height 22px
        background-color #fff
        box-shadow 0 2px 2px rgba(0, 0, 0, .24)
        transform translate3d(2px, 2px, 0)
        transition all 0.2s ease-in-out

    &:active
      span::after
        width 28px
        transform translate3d(2px, 2px, 0)

      input
        &:checked + span::after
          transform translate3d(16px, 2px, 0)

    input
      position absolute
      opacity 0
      pointer-events none

      &::before, &::after
        will-change transform

      &:checked + span
        background-color var(--mgfn__header-bg-color)

        &::before
          transform translate3d(18px, 2px, 0) scale3d(0, 0, 0)

        &::after
          transform translate3d(22px, 2px, 0)

    // input
    //   width auto
    //   margin-left 5px

  &-list, &-result
    display none
    width 100%; height 100%

  &[data-show='answers']
    & ^[-1]-list
      display flex

  &-list
    justify-content space-around

    &-item
      display flex
      align-items center
      justify-content center

      width 25%

      padding 5px

  &-item
    &-btn
      background-color transparent
      border 0

      user-select none
      cursor pointer

      text-align center
      font-size .8em

      line-height 1.3

      outline none

      &[data-disabled]
        cursor not-allowed

        & ^[-1]--face
          &::after
            content ''

      &:not([disabled]):hover
        opacity .8

        @media $mq.notHover
          opacity 1

      & > *
        pointer-events none

      &--face
        position relative
        width 100%; height 100px
        display block

        img
          width 100%; height 100%
          object-fit contain

        &::after
          position absolute
          width 20px; height 20px
          bottom 0; right 0

          background-image var(--mgfn__svg-mark_failure)
          background-size cover
          background-repeat no-repeat

      &--name
        margin-top 10px

        font-weight 700

      &--company
        margin-top 3px

        color #A6A6A6

    ^[-1][data-disallow-clicks]
      & ^[-1]-btn
        cursor not-allowed

        &:hover
          opacity 1

  &[data-show='result']
    & ^[-1]--phrase
      display none

    & ^[-1]-result
      display flex

  &:not([data-show='result'])
    & ^[-1]-result
      display none

  &-result
    position relative

    align-items center
    justify-content center
    flex-flow column

    a
      color var(--mgtn__chat-text-color) !important
      border-bottom: 1px solid var(--mgtn__link-border) !important

      &:hover
        color #cd192e !important
        border-color #f6b4bc !important

    &[data-right='yes']
      & ^[-1]--status
        color #3BBA6E

    &[data-right='no']
      & ^[-1]--status
        color #E7473B

    &--status
      font-size 1.4em
      font-weight 700

      &:empty
        display none

    &--text
      max-width 550px
      margin-top 10px
      padding 0 10px

      font-size .85em
      text-align center

    ^[-1][data-disallow-next]
      & ^[-1]--next-btn
        display none

    &--next-btn
      position absolute
      bottom 15px; right 15px

      padding 0

      background-color transparent
      border 0

      transition var(--mgfn__standard-transilion)

      cursor pointer
      user-select none

      outline none

      &:not([data-end])::after
        content ''

        display inline-block
        width 1em; height 1em
        margin-left 5px

        vertical-align middle

        font-size .8em

        background-image var(--mgfn__svg-arrow)
        background-size contain
        background-repeat no-repeat

      &:hover
        opacity .6

        @media $mq.notHover
          opacity 1
