&__answers
  position relative
  z-index 102
  width 100%
  max-width 900px
  background-color #fff

  @media $mq.iphone6
    width calc(100% - 20px)
    border-radius 30px 30px 0 0
    box-shadow 0px -1px 10px rgba(#000, .1)

  @media $mq.notMobile
    width calc(100% - 50px)
    box-shadow 0px -1px 34px rgba(#000, .1)

  &--header
    padding 5px 10px 0

    @media $mq.iphone6
      padding 10px 20px 0

    @media $mq.notMobile
      display flex
      justify-content space-between

      padding 15px 25px 0

  &--main
    display flex
    align-items center
    min-height 170px

    @media $mq.notMobile
      min-height 210px

  &--phrase
    padding-top 5px

    font-size 15px
    color #5d5d5d
    text-align center

    cursor default

    &:before
      content attr(data-counter) ' / ' attr(data-quiz-length)

      display inline

      margin-right 10px

      color #000

    @media $mq.notMobile
      padding-top 0

      font-size 18px

  &--theme-switcher
    display inline-block

    color #A6A6A6
    font-size 14px

    -webkit-tap-highlight-color transparent

    cursor pointer

    @media $mq.notMobile
      order 1
      margin-left auto
      font-size 18px

    span
      position relative
      display inline-block
      width 32px
      height 18px
      margin-left 10px
      background-color #E0E0E0
      border-radius 23px
      vertical-align middle
      will-change transform

      &::before, &::after
        content ''
        position absolute
        left 0
        border-radius 11px
        will-change transform

      &::before
        top 1px
        left 1px
        width 30px
        height 16px
        background-color var(--mgfn__header-bg-color)
        border-radius 11px
        transition all .25s linear

      &::after
        top 1px
        left 1px
        width 16px
        height 16px
        background-color #fff
        box-shadow 0 2px 2px rgba(0, 0, 0, .24)
        transition all 0.2s ease-in-out

    input
      position absolute
      opacity 0
      visibility hidden
      pointer-events none

      &::before, &::after
        will-change transform

      &:checked + span

        &::before
          background-color var(--mgfn__header-bg-color)

        &::after
          transform translate3d(calc(100% - 2px), 0, 0)

    @media $mq.desktop
      ^[0]:not([data-is-feed]) &

        span
          width 46px
          height 26px

          &::before
            top 2px; left 2px
            width 42px; height 22px

          &::after
            top 2px; left 2px
            width 22px; height 22px

  &-list, &-result
    display none
    width 100%

  &[data-show='answers']
    & ^[-1]-list
      display flex

  &-list
    justify-content space-around
    align-items flex-start

    &-item
      display flex
      align-items center
      justify-content center

      width 25%

      padding 5px

  &-item
    &-btn
      background-color transparent
      border 0

      user-select none
      cursor pointer

      text-align center
      font-size .8em

      line-height 1.3

      outline none

      &[data-disabled]
        cursor not-allowed

        & ^[-1]--face
          &::after
            content ''

      &:not([disabled]):hover
        opacity .8

        @media $mq.notHover
          opacity 1

      & > *
        pointer-events none

      &--face
        position relative
        width 100%; height 100px
        display block

        img
          width 100%; height 100%
          object-fit contain

        &::after
          position absolute
          width 20px; height 20px
          bottom 0; right 0

          background-image var(--mgfn__svg-mark_failure)
          background-size cover
          background-repeat no-repeat

      &--name
        margin-top 10px

        font-weight 700

        span
          &:nth-child(1)
            &::after
              content ' '

      &--company
        margin-top 3px

        color #A6A6A6

    ^[-1][data-disallow-clicks]
      & ^[-1]-btn
        cursor not-allowed

        &:hover
          opacity 1

  &[data-show='result']
    & ^[-1]--phrase
      visibility-hidden()

    & ^[-1]-result
      display flex

  &:not([data-show='result'])
    & ^[-1]-result
      display none

  &-result
    align-items center
    justify-content center
    flex-flow column

    user-select none

    @media $mq.mobile
      margin-top -29px

    &[data-right='yes']
      & ^[-1]--status
        color #3BBA6E

    &[data-right='no']
      & ^[-1]--status
        color #E7473B

    &--status
      font-size 20px
      font-weight 700

      @media $mq.notMobile
        font-size: 25px

      &:empty
        display none

    &--text
      width 550px
      max-width 100%
      margin-top .4em
      padding 0 10px

      font-size 14px
      text-align center
      line-height 1.3em

      @media $mq.notMobile
        margin-top .8em
        font-size: 16px

    ^[-1][data-disallow-next]
      & ^[-1]--next-btn
        display none

    &--next-btn
      position absolute
      top 0; right 5px

      background-color transparent

      height 35px
      padding 0 0 0 5px
      margin 0
      border 0

      font-size .9em

      transition var(--mgfn__standard-transilion)

      user-select none
      outline none

      cursor pointer

      @media $mq.iphone6
        top 5px; right 15px

        font-size .8em

      @media $mq.notMobile
        top auto; bottom 10px
        right 20px

        font-size 1em

      &:not([data-end])::after
        content ''

        display inline-block
        width 1em; height 1em
        margin-left 5px

        vertical-align middle

        font-size .8em

        background-image var(--mgfn__svg-arrow)
        background-size contain
        background-repeat no-repeat

      &:hover
        opacity .6

        @media $mq.notHover
          opacity 1
