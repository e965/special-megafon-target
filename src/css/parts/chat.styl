&__chat
  height calc(100% - var(--mgfn__offset-chat))

  padding 0 15px 0 10px

  background-image var(--mgfn__img-chat-bg)
  background-size cover

  background-color var(--mgtn__chat-bg-color)

  transition var(--mgfn__switch-theme-transilion)

  overflow hidden

  scroll-behavior smooth

  overflow-y scroll
  overflow-x hidden

  &-header
    position relative
    width 100%; max-width 100%

    background-color var(--mgfn__header-bg-color)

    color var(--mgfn__header-text-color)

    transition var(--mgfn__switch-theme-transilion)

    cursor default
    user-select none

    & > *
      position absolute

    &--counter, &--operator, &--sender
      webkit-anim-delay()

    &--counter, &--operator
      top 7px

      line-height 1.3
      font-size .5em

    &--counter
      left 35px

    &--operator
      right 25px

    &--sender
      bottom 15px
      right 0; left 0

      font-size .85em

      text-align center
      line-height 1

    &--avatar
      right 15px; bottom 10px

      width 30px; height 30px

      background-image var(--mgfn__img-anon)
      background-size cover

  // for Retina displays
  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
    --mgfn__img-chat-bg: $images.chat_bg_x2
    --mgfn__img-anon: $images.anon_x2
